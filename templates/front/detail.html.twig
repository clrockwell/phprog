{% extends 'base.html.twig' %}

{% block title %}PHP Repos on Github{% endblock %}

{% block body %}

    <div class="container">
        {% include 'banner.html.twig' %}
        <div class="col-md-12 mt-2">
            <div class="card text-dark mb-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="{{ repo.htmlUrl }}" target="_blank">{{ repo.name }}</a>
                        </div>
                        <div class="col-md-6 d-flex justify-content-end">
                            <p>
                                <svg aria-hidden="true" height="16" viewBox="0 0 16 16" version="1.1" width="16" data-view-component="true" class="octicon octicon-star v-align-text-bottom d-inline-block mr-2">
                                    <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Zm0 2.445L6.615 5.5a.75.75 0 0 1-.564.41l-3.097.45 2.24 2.184a.75.75 0 0 1 .216.664l-.528 3.084 2.769-1.456a.75.75 0 0 1 .698 0l2.77 1.456-.53-3.084a.75.75 0 0 1 .216-.664l2.24-2.183-3.096-.45a.75.75 0 0 1-.564-.41L8 2.694Z"></path>
                                </svg> {{ repo.stargazersCount }}
                            </p>
                        </div>
                    </div>

                <div class="card-body">
                    <div class="row border mb-2 p-2">
                        <div class="col-md-3 d-flex justify-content-end">Repository Id</div>
                        <div class="col-md-6">{{ repo.repositoryId }}</div>
                    </div>
                    <div class="row border mb-2 p-2">
                        <div class="col-md-3 d-flex justify-content-end">Name</div>
                        <div class="col-md-6">{{ repo.name }}</div>
                    </div>
                    <div class="row border mb-2 p-2">
                        <div class="col-md-3 d-flex justify-content-end">Url</div>
                        <div class="col-md-6"><a href="{{ repo.htmlUrl }}" target="_blank">{{ repo.htmlUrl }}</a></div>
                    </div>
                    <div class="row border mb-2 p-2">
                        <div class="col-md-3 d-flex justify-content-end">Created Date</div>
                        <div class="col-md-6">{{ repo.createdAt | date("F jS \\a\\t g:ia") }}</div>
                    </div>
                    <div class="row border mb-2 p-2">
                        <div class="col-md-3 d-flex justify-content-end">Last Push Date</div>
                        <div class="col-md-6">{{ repo.pushedAt | date("F jS \\a\\t g:ia") }}</div>
                    </div>
                    <div class="row border mb-2 p-2">
                           {#                        Shoudl deal with null values          #}
                        <div class="col-md-3 d-flex justify-content-end">Description</div>
                        <div class="col-md-6">{{ repo.description }}</div>
                    </div>
                    <div class="row border mb-2 p-2">
                        <div class="col-md-3 d-flex justify-content-end">Number of Stars</div>
                        <div class="col-md-6">{{ repo.stargazersCount }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
